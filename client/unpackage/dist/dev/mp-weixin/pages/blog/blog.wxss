.over2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.blog {
  width: 750rpx;
}
.blog .head {
    width: 750rpx;
    padding: 1rem;
    box-sizing: border-box;
    border-bottom: 2px solid #fbfbfc;
}
.blog .head .title {
      width: 100%;
      font-weight: bold;
      font-size: 1.125rem;
}
.blog .head .date {
      padding: 0.5rem 0;
      font-size: 0.76rem;
      line-height: 2rem;
      padding: 0;
      margin: 0;
}
.blog .head .user {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: horizontal;
      -webkit-box-direction: normal;
      -webkit-flex-direction: row;
              flex-direction: row;
      box-sizing: border-box;
      border: 2px solid #fbfbfc;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 2.91rem;
}
.blog .head .user .header-img image {
        width: calc(2.91rem / 2);
        height: calc(2.91rem / 2);
        border-radius: 50%;
}
.blog .head .user .user-name {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        max-width: 7.65rem;
        box-sizing: border-box;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
                flex-direction: column;
        padding-left: 0.5rem;
}
.blog .head .user .user-name text {
          width: 100%;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          font-size: 0.875rem;
}
.blog .head .user .focus {
        width: 100%;
        text-align: center;
        padding: 0.125rem 1rem;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        white-space: nowrap;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        -webkit-flex-direction: row;
                flex-direction: row;
        -webkit-justify-content: space-around;
                justify-content: space-around;
}
.blog .head .user .focus > text {
          width: 3rem;
          border: 2px solid #cfcfcf;
          border-radius: 3px;
}
.blog .preview {
    box-sizing: border-box;
    padding: 1rem;
}
.blog .preview text {
      font-size: 0.875rem;
}

